<div class="container">
  <div class="header">
    <h1>List of Users</h1>
  </div>
  <hr>
  
  <div class="link">
    <%= link_to "Sign Up", new_user_path, class: "button" %>
  </div>

  <table>
      <tr class:"tab-row" >
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    <% @users.each do |user| %>
      <tr>
      <td><%= user.name %></li></td>
      <td><%= link_to 'Show', user_path(user), class: "manage-todo" %></td>
      <td><%= link_to 'Edit', edit_user_path(user), class: "manage-todo" %></td>
      <td><%= link_to 'Delete', user_path(user),
                  method: :delete,
                  data: { confirm: 'Are you sure?' }, class: "manage-todo" %></td>
      </tr>
    <% end %>
  </table>
</div>