<div class="container">
  <div class="header">
    <h1>List of todos</h1>
  </div>
  <hr>
  <div class="link">
    <%= link_to "Create a todo", new_todo_path, class: "button" %>
  </div>  
  <table>
    <tr class:"tab-row" >
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
   
    <% @todos.each do |todo| %>
      <tr class:"tab-row">
        <td><%= todo.name %></td>
        <td><%= todo.description %></td>
        <td><%= link_to 'Show', todo_path(todo), class: "manage-todo" %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo), class: "manage-todo" %></td>
        <td><%= link_to 'Delete', todo_path(todo),
                method: :delete,
                data: { confirm: 'Are you sure?' }, class: "manage-todo" %></td>
      </tr>
    <% end %>
  </table>
</div>