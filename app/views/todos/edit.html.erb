
<h1>Editing Todo</h1>
<%= form_for @todo, url: todo_path(@todo), method: :patch do |f| %>

  
  
  <p>
  <%= f.label :name %> <br/>
  <%= f.text_field :name %> 
  </p>
  
  <p>
  <%= f.label :description %> <br/>
  <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>

<% end %>