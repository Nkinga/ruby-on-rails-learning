<% if @todo.errors.any? %>
  <div class="errors">
    <h2 >The following errors prevented the todo from being saved</h2>
    <ul>
      <% @todo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<div class="form">
  
<%= form_for @todo do |f| %>
  
  <p>
  <%= f.label :name %> <br/>
  <%= f.text_field :name %> 
  </p>
  
  <p>
  <%= f.label :description %> <br/>
  <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>

<% end %>

</div>

<%= link_to 'Back to listing', todos_path, class: "button" %>